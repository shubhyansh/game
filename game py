import cv2
x=130
y=170
z=135
k=150
ca=numpy.ones((1000,1000,3))
ca[x:y,z:k]=[234,0,0]
ca[x+40:y+10,z+10:k]=[0,0,255]
ca[x+10:y-20,z+16:k+10]=[0,0,255]
ca[x+40:y+10,z:k-10]=[0,0,255]
ca[x+35:y,z-10:k-15]=[0,0,255]
ca[x+4:y-30,z+9:k]=[0,254,12]
ca[300:420,400:500 ]=[23,255,134]
while True:
    cv2.imshow("BE GENTAL",ca)
    cv2.waitKey(10)
    
    if cv2.waitKey()== ord("/"): 
        print("YOU WIN")
        break
    else:
        print("YOU LOSE")
        break
        
cv2.destroyAllWindows() 




















